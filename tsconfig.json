{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Preserve",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true, 
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "src",
    "declaration": true
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "examples",
    "node_modules",
    "src/**/*.test.tsx",
    "src/test-setup.ts"
  ]
}
